%h2 Send invitation
= form_for User.new, :url => invitation_path(User) do |f|
  /= devise_error_messages!
  %p
    = f.label :email
    = f.text_field :email
    = f.hidden_field :aspect_id, :value => @aspect.id
  %p= f.submit "Send an invitation"
/= link_to "Home", after_sign_in_path_for(resource_name)
